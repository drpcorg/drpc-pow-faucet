{
  "compilerOptions": {
    "module": "ES2022",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "lib": ["es2015"],
  "include": [
    "src/@types",
    "src/app.ts",
    "src/tools/migrateDB.ts",
    "src/modules/pow/validator/PoWValidatorWorker.ts"
  ],
  "exclude": [
    "tests",
    "tests-old",
    "faucet-client",
    "faucet-wasm",
    "node_modules"
  ]
}
